<%# should this partial just receive a class and attr directly? %>
<%# attr is always the same so far %>
<% klass = objects.first.class -%>
<% attr = klass.default_search_attribute if klass.respond_to? :default_search_attribute -%>
<%= form_tag url_for(klass), method: "get" do %>
  <%= label_tag attr, "Search by #{attr}:" %>
  <%= text_field_tag attr %>
<% end if attr %>
